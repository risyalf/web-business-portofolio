---
import { siteConfig } from '../config.ts';
import { Icon } from 'astro-icon/components';
import { servicesContent } from '../content/services';
import { portofoliosContent } from '../content/portofolios';

const iconMap = {
  lightning: 'heroicons:bolt',
  code: 'heroicons:code-bracket',
  chart: 'heroicons:chart-bar',
  chat: 'heroicons:chat-bubble-left-right',
  shield: 'heroicons:lock-closed',
  clock: 'heroicons:clock',
  brush: 'heroicons:paint-brush',
  layers: 'heroicons:user-group',
  zap: 'heroicons:arrow-trending-up',
};
---

<section id="portofolios" class="relative bg-mono-lighter border-t-2 px-4 py-20 sm:px-6 lg:px-8">
  <div
    class="border-mono-lighter absolute top-8 left-8 h-16 w-16 border-t-2 border-l-2"
  >
  </div>
  <div
    class="border-mono-lighter absolute top-8 right-8 h-16 w-16 border-t-2 border-r-2"
  >
  </div>

  <div class="mx-auto max-w-7xl">
    <div class="scroll-fade-up mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-mono-black mb-4 text-4xl font-bold sm:text-5xl">
        {siteConfig.portofolios.title}
      </h2>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-2">
      {
        portofoliosContent.map((portofolio, index) => (
          <div
            class={`group ${index % 2 === 0 ? 'scroll-fade-left' : 'scroll-fade-right'} border-mono-lighter rounded-xl border p-8 stagger-${(index % 9) + 1}`}
          >
            <div class="feature-icon mb-6 flex h-auto w-full items-center justify-center rounded-lg text-white">
              {/* <Icon name={iconMap[portofolio.image]} class="h-7 w-7" /> */}
              <img
                src={portofolio.image}
                alt={portofolio.imageAlt}
              />
            </div>
            <h3 class="text-mono-black mb-3 text-xl font-semibold">
              {portofolio.title}
            </h3>
            <p class="text-mono-dark leading-relaxed">{portofolio.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
